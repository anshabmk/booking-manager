<center><h1>Player Signup</h1></center>

<div class="container">
  <div class="row">
    <div class="col">
    <% if @player.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          <center>The form contains <%= pluralize(@player.errors.count, "error") %>.</center>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>

<%= render 'form', player: @player %>
