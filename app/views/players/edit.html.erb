<% heading = admin_logged_in? ? 'Editing Player' : 'Edit Profile' %>

<center><h1><%= heading %></h1></center>

<%= form_with(model: @player, local: true) do |form| %>
  <div class="form-group">
    <%= form.label(:firstname, 'Firstname') %>
    <%= form.text_field :firstname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label(:lastname, 'Lastname') %>
    <%= form.text_field :lastname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label(:email_id, 'E-mail ID') %>
    <%= form.text_field :email_id, class: "form-control" %>
    <small id="emailHelp" class="form-text text-muted">
      Editing e-mail will de-activate your account till administrator verification.
    </small>
  </div>

  <div class="form-group">
    <%= form.label(:mobile_number, 'Mobile number') %>
    <%= form.text_field :mobile_number, class: "form-control" %>
    <small id="mobileNumberHelp" class="form-text text-muted">
      Editing mobile number will de-activate your account till administrator verification.
    </small>
  </div>

  <center>
    <%= link_to "Cancel", @player, class: "btn btn-secondary", role: "button" %>
    <%= form.submit("Save", class: "btn btn-primary") %>
  </center>
<% end %>
