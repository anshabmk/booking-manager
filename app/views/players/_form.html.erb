<div class="container">
<%= form_with(model: player, local: true) do |form| %>
  <div class="form-group row">
    <%= form.label(:name, 'Name', class: "col-sm-2 col-form-label") %>
    <div class="col-sm-5">
      <%= form.text_field :firstname, class: "form-control", placeholder: "Firstname", required: true %>
    </div>
    <div class="col-sm-5">
      <%= form.text_field :lastname, class: "form-control", placeholder: "Lastname" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label(:email_id, 'E-mail ID', class: "col-sm-2 col-form-label") %>
    <div class="col-sm-10">
      <%= form.text_field :email_id, class: "form-control", required: true  %>
      <small id="emailHelp" class="form-text text-muted">
        We'll never share your email with anyone else.
      </small>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label(:mobile_number, 'Mobile number', class: "col-sm-2 col-form-label") %>
    <div class="col-sm-10">
      <%= form.text_field :mobile_number, class: "form-control", required: true  %>
      <small id="mobileNumberHelp" class="form-text text-muted">
        We'll never share your mobile number with anyone else.
      </small>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label(:password, 'Password', class: "col-sm-2 col-form-label") %>
    <div class="col-sm-10">
      <%= form.password_field :password, class: "form-control", required: true  %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label(:password_confirmation, 'Confirm password', class: "col-sm-2 col-form-label") %>
    <div class="col-sm-10">
      <%= form.password_field :password_confirmation, class: "form-control", required: true  %>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <div class="col">
      <center><%= form.submit("Sign up", class: "btn btn-primary") %></center>
    </div>
  </div>
<% end %>
</div>
