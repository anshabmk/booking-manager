<%= form_with(model: player, local: true) do |form| %>
  <div class="form-group">
    <%= form.label(:firstname, 'Firstname') %>
    <%= form.text_field :firstname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label(:lastname, 'Lastname') %>
    <%= form.text_field :lastname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label(:email_id, 'E-mail ID') %>
    <%= form.text_field :email_id, class: "form-control" %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>

  <div class="form-group">
    <%= form.label(:mobile_number, 'Mobile number') %>
    <%= form.text_field :mobile_number, class: "form-control" %>
    <small id="mobileNumberHelp" class="form-text text-muted">We'll never share your mobile number with anyone else.</small>
  </div>

  <div class="form-group">
    <%= form.label(:password, 'Password') %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label(:password_confirmation, 'Confirm password') %>
    <%= form.password_field :password_confirmation, class: "form-control" %>
  </div>

  <%= form.submit("Sign up", class: "btn btn-secondary btn-block") %>
<% end %>
