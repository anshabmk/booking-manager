<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Name</th>
      <th colspan="3">Mobile number</th>
      <th colspan="3">E-mail ID</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td colspan="3"><%= fullname(player.firstname, player.lastname) %></td>
        <td colspan="3"><%= player.mobile_number %></td>
        <td colspan="3"><%= player.email_id %></td>
        <td colspan="3"><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<center><button><%= link_to 'Add New Player', new_player_path %></button></center>
