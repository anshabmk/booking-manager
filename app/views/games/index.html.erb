<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Played on</th>
      <th colspan="3">Time slot</th>
      <th colspan="3">Duration</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td colspan="3"><%= parse_date(game.played_on) %></td>
        <td colspan="3"><%= parse_time_slot(game.time_slot) %></td>
        <td colspan="3"><%= parse_duration(game.duration) %></td>
        <td colspan="3"><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
