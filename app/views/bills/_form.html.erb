<div class="container">
  <%= form_with(model: bill, local: true) do |form| %>
    <div class="form-group row">
      <%= form.label(:name, 'Bill name', class: "col-sm-2 col-form-label") %>
      <div class="col-sm-10">
        <%= form.text_field :name, class: "form-control" , required: true %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label(:bill_period, 'From date', class: "col-sm-2 col-form-label") %>
      <div class="col-sm-4">
        <%= form.date_field :from_date, class: "form-control", required: true %>
      </div>
      <%= form.label(:to_date, 'To date', class: "col-sm-2 col-form-label") %>
      <div class="col-sm-4">
        <%= form.date_field :to_date, class: "form-control", required: true %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label(:fee_per_game, 'Fee per game', class: "col-sm-2 col-form-label") %>
      <div class="col-sm-10">
        <%= form.text_field :fee_per_game, class: "form-control", required: true %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <div class="col">
        <center>
          <%= link_to 'Back', bills_path, class: "btn btn-secondary", role: "button" %>
          <%= form.submit("Generate Bill", class: "btn btn-primary") %>
        </center>
      </div>
    </div>
  <% end %>
</div>
