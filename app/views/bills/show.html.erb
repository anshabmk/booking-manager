<%= render 'shared/success_alert_notice', notice: notice %>

<h1>Bill details</h1>

<table class="table">
  <tr>
    <th>Date range</th>
    <td><%= @bill.strf_date_range %></td>
  </tr>
  <tr>
    <th>Fee per game</th>
    <td><%= @bill.fee_per_game %></td>
  </tr>
  <tr>
    <th>Total Amount</th>
    <td><%= @bill.total_amount %></td>
  </tr>
</table>

<center>
  <%= link_to "Send Notification SMS", "/bills/#{@bill.id}/send_notification_message", class: "btn btn-secondary btn-sm", role: "button" %>
</center>

<h2>Amounts</h2>

<table class="table table-hover text-align-center">
  <thead class="thead-dark">
    <tr>
      <th>
        Sl. No.
      </th>
      <th>
        Player Name
      </th>
      <th>
        Mobile number
      </th>
      <th>
        E-mail ID
      </th>
      <th>
        Amount
      </th>
    </tr>
  </thead>

  <tbody>
    <% @bill.bill_amounts.each_with_index do |bill_amount, i| %>
      <tr>
        <td>
          <%= i + 1 %>
        </td>
        <td>
          <%= bill_amount.player.fullname %>
        </td>
        <td>
          <%= bill_amount.player.mobile_number %>
        </td>
        <td>
          <%= bill_amount.player.email_id %>
        </td>
        <td>
          <%= bill_amount.amount %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<center>
  <%= link_to 'Edit', edit_bill_path(@bill) %> |
  <%= link_to 'Back', bills_path %>
</center>
