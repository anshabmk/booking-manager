<h1>Pending activations</h1>

<% if @inactive_players.count.zero? %>

<div class="alert alert-secondary" role="alert">
  No pending activations!
</div>

<% else %>

<div class="table-responsive table-secondary">
  <table class="table table-hover text-align-center">
    <thead class="thead-dark">
      <tr>
        <th>Sl. No.</th>
        <th>Player name</th>
        <th>E-mail</th>
        <th>Mobile number</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @inactive_players.each_with_index do |player, i| %>
        <% entry_location = "/players/#{player.id}" %>

        <tr>
          <td><%= i + 1 %></td>
          <td><%= player.fullname %></td>
          <td><%= player.email_id %></td>
          <td><%= player.mobile_number %></td>
          <td>
            <%= link_to "Activate", "/activations/activate/#{player.id}", class: "btn btn-secondary btn-sm", role: "button" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<% end %>